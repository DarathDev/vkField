{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Builder",
            "command": "odin",
            "windows": {
                "args": [
                    "build",
                    ".",
                    "-out:build.exe",
                    "-debug"
                ]
            },
            "problemMatcher": [
                "$odin"
            ]
        },
        {
            "label": "Build Tests",
            "command": "build.exe",
            "args": [
                "-test",
                "-debug"
            ],
            "windows": {},
            "dependsOn": "Build Builder",
            "problemMatcher": [
                "$odin"
            ]
        },
    ]
}